// +++++++ config by cy-domain ++++++++
{
  "compilerOptions": {
    "types": [ "bun-types" ],

    "lib": ["esnext"],
    "module": "NodeNext",
    "target": "esnext",

    "moduleResolution": "nodeNext",
    "outDir": "./dist",

    "esModuleInterop": true,

    "noErrorTruncation": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
  },
  "include": [
    "src/**/*",
  ],
}
  
